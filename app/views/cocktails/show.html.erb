<h2><%= @cocktail.name.capitalize %></h2>

<p>
  <h3>Doses from the Community</h3>
</p>

<ol>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to 'Delete', cocktail_path(@cocktail.id), method: :delete %> </li>
<% end %>
</ol>

<h3>New dose</h3>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

<br>
<p>
<%= link_to 'Go back to all cocktails view', cocktails_path %>
</p>
